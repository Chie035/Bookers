<h1 class="edit-heading">Editing Book</h1>

<% if @book.errors.any? %>
<div class="alert-box">
  <h2 class="alert-heading">There are some errors</h2>
  <ul class="alets">
  <% @book.errors.full_messages.each do |message| %>
    <li class="alert-message"><%= message %></li>
  <% end %>
  </ul>
</div>
<% end %>

<div class="edit-form">
<%= form_with model:@book, local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>Body</p>
<%= f.text_area :body %>

<div class="btn-update">
<%= f.submit "Update Book" %>
</div>

<% end %>
</div>

<div class="btns">
<%= link_to "show",book_path %>
<p>|</p>
<%= link_to "Back",books_path %>
</div>